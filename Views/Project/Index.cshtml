@model IEnumerable<Project_Manager.Models.Project>

@{
    ViewData["Title"] = "My Projects";
}

<h1>My Projects</h1>

@if (User.Identity.IsAuthenticated)
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created Date</th>
                <th>Owner</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.Description</td>
                    <td>@project.CreatedDate.ToShortDateString()</td>
                    <td>@project.Owner.UserName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-info">Подробнее</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary">Создать новый проект</a>
}
else
{
    <p>Please log in to see your projects.</p>
}
<h2>Projects you are a member of</h2>
<p>Заглушка для списка проектов, в которые вас пригласили.</p>