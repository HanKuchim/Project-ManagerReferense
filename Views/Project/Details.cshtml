@model Project_Manager.Models.Project

@{
    ViewData["Title"] = "Project Details";
    var userRole = ViewBag.UserRole as string;
}

<h1>@Model.Title</h1>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Created Date:</strong> @Model.CreatedDate.ToShortDateString()</p>
<p><strong>Owner:</strong> @Model.Owner.UserName</p>

<div class="btn-group" role="group" aria-label="Project Actions">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
    <a asp-action="Index" asp-controller="Task" asp-route-projectId="@Model.Id" class="btn btn-secondary">Project Tasks</a>
    <a asp-action="Index" asp-controller="ProjectMembers" asp-route-projectId="@Model.Id" class="btn btn-secondary">Project Members</a>
    @if (userRole == "Admin")
    {
        <a asp-action="Manage" asp-controller="Project" asp-route-id="@Model.Id" class="btn btn-secondary">Project Management</a>
    }
</div>