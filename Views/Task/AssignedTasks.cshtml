@model IEnumerable<Project_Manager.Models.Task>

@{
    ViewData["Title"] = "Assigned Tasks";
}

<h1>Assigned Tasks</h1>



<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Priority</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.Priority</td>
                <td>@task.Status</td>
                <td>
                    <a asp-action="Details" asp-controller="Task" asp-route-id="@task.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>