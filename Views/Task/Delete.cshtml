@model Project_Manager.Models.Task

@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Due Date
        </dt>
        <dd class="col-sm-10">
            @Model.DueDate.ToString("MM/dd/yyyy")
        </dd>
        <dt class="col-sm-2">
            Priority
        </dt>
        <dd class="col-sm-10">
            @Model.Priority
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>